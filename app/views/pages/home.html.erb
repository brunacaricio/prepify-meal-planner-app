<div class="parent-container mt-3">
  <div class="row justify-content-center">

    <div class="col-12 col-lg-4">
      <div class="row">
        <div class="col-2">
          <% if user_signed_in? %>
            <% if current_user.photo.attached? %>
              <%= cl_image_tag current_user.photo.key, class: "avatar" %>
            <% else %>
              <i class="fa-solid fa-bowl-food justify-content-center"></i>
            <% end %>
          <% else %>
            <i class="fa-solid fa-bowl-food justify-content-center"></i>
          <% end %>
        </div>
        <div class="col-10">
          <% if user_signed_in? %>
            <h4><b>Hello <%= current_user.username %></b></h4>
          <% else %>
            <h4><b>Hello</b></h4>
          <% end %>
          <p class="fw-light">What are you cooking this week?</p>
        </div>
      </div>
    </div>

    <%= render "shared/search" %>

    <div class="bigcard col-12 col-lg-8 mb-3 mt-3">
      <h3 class="mb-3"><%= link_to 'Today', planned_meals_path, class: 'subparagraph' %></h3>

      <div class="homecard add-recipe-card d-flex align-items-center justify-content-center bg-white">
        <% if user_signed_in? && !current_user.planned_meals.find_by(date: Date.today).nil? %>

          <% recipe = current_user.planned_meals.find_by(date: Date.today).recipe %>
          <img src="<%= recipe.image %>" class="card-image" alt="<%= recipe.title %>">

          <div class="homecard-content">
            <h6 class= "font-weight-bold"><b><%= link_to recipe.title, recipe_path(recipe), class: "card-title" %></b></h6>
            <p class="card-text font-weight-light"><%= recipe.category.split(', ')[0].capitalize %></p>
          </div>

        <% else %>
          <%= link_to recipes_path do %>
            <div class = "d-flex justify-content-center">
              <%= image_tag 'plus.svg' %>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>




    <div class="col-12 col-lg-6 justify-content-center d-flex flex-column">
      <div class="d-flex justify-content-between align-items-center">
        <h6 class="mt-3"><b>Search by category</b></h6>
        <%= link_to 'See all', recipes_path, class: 'btn btn-link text-dark text-decoration-none ml-auto fw-light mt-3' %>
      </div>
      <div class="mt-3 category-scroll">
        <% @categories.each do |category|  %>
          <div class="category-button"><%= link_to "#{category}", root_path(categ: "#{category}"), class: params[:categ] == category ? "card-category card-category-active" : "card-category" %></div>
        <% end %>
      </div>
    </div>

  </div>
</div>



    <div class="col-12 col-lg-6 justify-content-center">
      <div class="row">
        <div class="col-12">
          <div class="recipe-cards">
            <% @recipes.each do |recipe| %>
              <div class="card-scroll">
                <img src="<%= recipe.image %>" class="card-image-scroll" alt="<%= recipe.title %>">
                <div class="card-content">
                  <%= link_to recipe.title, recipe_path(recipe), class: "card-title fw-bold" %>
                  <p class="card-text fw-light"><%= recipe.category.split(', ')[0].capitalize %></p>
                </div>

                <i id="plus-button" data-bs-toggle="modal" data-bs-target="#staticBackdrop<%=recipe.id%>"><%= image_tag 'plus.svg', class: "add-button w-12" %></i>

                <div class="modal fade" id="staticBackdrop<%=recipe.id%>" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                  <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">
                      <div class="modal-header">
                        <h5 class="modal-title" id="staticBackdropLabel">Where do you want to add this recipe?</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                      </div>
                      <div class="button-container">

                        <% if user_signed_in? && current_user.favorites.exists?(recipe_id: recipe.id) %>
                          <button type="button" class="btn btn-outline-success d-flex justify-content-center mx-auto mt-3 p-1" disabled> Already saved in my Favorites !</button>
                        <% else %>
                          <%= form_with url: recipe_favorites_path(recipe_id: recipe.id), method: :post, class: "d-inline" do %>
                          <button type="submit" class="btn orange-btn d-flex justify-content-center mx-auto mt-3 mb-2 p-2">
                            Add to my favorites <i class="fa-solid fa-heart p-1"></i>
                          </button>
                            <% end %>
                        <% end %>

                        <hr>

                        <div data-controller= "add-to-calendar">
                            <%= simple_form_for [recipe, @planned_meal], data: { add_to_calendar_target: "form", action:"submit->add-to-calendar#send"} do |f| %>
                              <div class="row justify-content-center">
                                <div class="col-md-6 text-center">
                                  <%= f.input :date, as: :string, input_html: { id: "date", data: { controller: "datepicker", add_to_calendar_target: "input"}, class: "form-control text-center mx-auto w-50", placeholder: "Select a day" }, label: false %>
                                </div>
                              </div>
                              <div class="row justify-content-center">
                                <div class="col-md-6">
                                  <%= f.button :submit, "Add to my calendar", class: "btn orange-btn d-flex justify-content-center mx-auto mt-2 mb-3 p-2" %>
                                </div>
                              </div>
                            <% end %>
                          </div>
                      </div>
                    </div>
                  </div>
                </div>


              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
